<?xml version="1.0" encoding="utf-8"?>
<Protocol name="LoginProt" id="1" comment="登陆LoginServer的协议">
	<Refer>
    </Refer>
  <TypeDef>
    <Enum name="ELoginResult" desc="true" comment="登陆结果">
      <Member name="eLoginSucceed" comment="登陆成功"/>
      <Member name="eVersionLess" comment="客户端版本号低于服务器"/>
      <Member name="eNotActivated" comment="帐号未激活此区服"/>
      <Member name="eAccountInvalid" comment="帐号错误"/>
      <Member name="ePasswordInvalid" comment="密码错误"/>
      <Member name="eAccPwdErr" comment="账号不存在或密码错误"/>
      <Member name="eUsrStateErr" comment="帐号状态异常"/>
      <Member name="eAccountFreeze" comment="帐号冻结"/>
      <Member name="eAccountLogin" comment="帐号正在登陆中"/>
      <Member name="eReqOverTime" comment="请求超时"/>
      <Member name="eReqTooFreqent" comment="请求太频繁"/>
      <Member name="eServerFull" comment="服务器已满"/>
      <Member name="eRoleOnline" comment="已有角色在线"/>
      <Member name="eKickWait" comment="踢帐号等待"/>
      <Member name="eLeaveWait" comment="下线等待"/>
      <Member name="eEnterTooFreqent" comment="请求太频繁"/>
      <Member name="eLoginServerErr" comment="服务器内部错误"/>
      <Member name="eServerInitErr" comment="服务器未启动完毕"/>
      <Member name="eLoginOtherErr" comment="系统错误"/>
    </Enum>
  </TypeDef>
  <FuncC2S client="ActionScript,CppSvr">
    <Func name="LoginReq" comment="登陆请求">
      <Param type="UINT64" name="qwUsrID" comment="帐号ID"/>
      <Param type="UINT16" name="usGroupID" comment ="区号"/>
      <Param type="UINT32" name="dwVersion" comment ="版本号"/>
      <Param type="ByteArray" name="strPassword" comment ="验证key"/>
    </Func>
  </FuncC2S>
  <FuncS2C>
    <Func name="LoginAck" comment="登陆结果返回">
      <Param type="ELoginResult" name="eLoginResult" comment="请求登录结果"/>
      <Param type="UINT64" name="qwRoleId"  comment="角色ID"/>
      <Param type="string" name="strGateIP" comment="GateServer的IP"/>
      <Param type="UINT16" name="wGatePort" comment="GateServer端口"/>
      <Param type="UINT32" name="dwCryptoCode" comment="登录验证码"/>
    </Func>
  </FuncS2C>
</Protocol>
